{
  "manifest_version": 3,
  "name": "Evil Quiz AI",
  "version": "1.0.0",
  "description": "Unleash the power of knowledge with evil AI answers",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://evil-quiz-ai-backend.vercel.app/*",
    "https://evil-quiz-ai-backend.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Evil Quiz AI",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}